	  <origin>0 0</origin>
      <glowColor>000000df</glowColor>
      <glowSize>1</glowSize>
	  <forceUppercase>true</forceUppercase>
    </text>

    <text name="mylabel" extra="true">
      <fontPath>./medias/DragonForcE.TTF</fontPath>
      <fontSize>0.15</fontSize>
	  <color>ff9933DF</color>
	  <pos>0.5 0.028</pos>
	  <origin>0.5 0</origin>
      <glowColor>ce1126df</glowColor>
      <glowSize>2</glowSize>
